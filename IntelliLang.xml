<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="JSON" injector-id="xml">
      <display-name>script</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("script")).withNamespace(string().equalTo("http://www.w3.org/1999/html"))]]></place>
    </injection>
    <injection language="TEXT" injector-id="xml">
      <display-name>script/@type</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("type")).withParent(xmlTag().withLocalName(string().equalTo("script")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>